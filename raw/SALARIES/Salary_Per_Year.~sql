
SELECT SAL_MATRICULE,SAL_INTITULE,
sum ("JAN-2013") "JAN-2013",
sum ("FEB-2013") "FEB-2013",
sum ("MAR-2013") "MAR-2013",
sum ("APR-2013") "APR-2013",
sum ("MAY-2013") "MAY-2013",
sum ("JUN-2013") "JUN-2013",
sum ("JUL-2013") "JUL-2013",
sum ("AUG-2013") "AUG-2013",
sum ("SEP-2013") "SEP-2013",
sum ("OCT-2013") "OCT-2013",
sum ("NOV-2013") "NOV-2013",
sum ("DEC-2013") "DEC-2013",
sum ("JAN-2014") "JAN-2014",
sum ("FEB-2014") "FEB-2014",
sum ("MAR-2014") "MAR-2014",
sum ("APR-2014") "APR-2014",
sum ("MAY-2014") "MAY-2014",
sum ("JUN-2014") "JUN-2014",
sum ("JUL-2014") "JUL-2014",
sum ("AUG-2014") "AUG-2014",
sum ("SEP-2014") "SEP-2014",
sum ("OCT-2014") "OCT-2014",
sum ("NOV-2014") "NOV-2014",
sum ("DEC-2014") "DEC-2014"
FROM 
(
SELECT sc.sal_matricule,sc.sal_intitule,
case when to_char(sc.sal_date_paie,'MM/YYYY') ='01/2013' then sc.sal_montant else 0 end "JAN-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='02/2013' then sc.sal_montant else 0 end "FEB-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='03/2013' then sc.sal_montant else 0 end "MAR-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='04/2013' then sc.sal_montant else 0 end "APR-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='05/2013' then sc.sal_montant else 0 end "MAY-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='06/2013' then sc.sal_montant else 0 end "JUN-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='07/2013' then sc.sal_montant else 0 end "JUL-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='08/2013' then sc.sal_montant else 0 end "AUG-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='09/2013' then sc.sal_montant else 0 end "SEP-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='10/2013' then sc.sal_montant else 0 end "OCT-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='11/2013' then sc.sal_montant else 0 end "NOV-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='12/2013' then sc.sal_montant else 0 end "DEC-2013", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='01/2014' then sc.sal_montant else 0 end "JAN-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='02/2014' then sc.sal_montant else 0 end "FEB-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='03/2014' then sc.sal_montant else 0 end "MAR-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='04/2014' then sc.sal_montant else 0 end "APR-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='05/2014' then sc.sal_montant else 0 end "MAY-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='06/2014' then sc.sal_montant else 0 end "JUN-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='07/2014' then sc.sal_montant else 0 end "JUL-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='08/2014' then sc.sal_montant else 0 end "AUG-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='09/2014' then sc.sal_montant else 0 end "SEP-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='10/2014' then sc.sal_montant else 0 end "OCT-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='11/2014' then sc.sal_montant else 0 end "NOV-2014", 
case when to_char(sc.sal_date_paie,'MM/YYYY') ='12/2014' then sc.sal_montant else 0 end "DEC-2014" 
FROM paie_fonctionnaire pf left outer join sal_cenadi sc  on pf.fon_matricule = sc.sal_matricule
WHERE sc.sal_date_paie between '01/01/2013' and '31/12/2014'
)
group by SAL_MATRICULE,SAL_INTITULE;
